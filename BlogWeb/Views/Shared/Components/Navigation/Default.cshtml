@using BlogWeb.Models
@model IEnumerable<BlogWeb.Models.Favorite>
@{
    var Session = Context.Session;
    int? userId = Session.GetInt32("UserAccountId");
    UserAccount? userAccount = ViewBag.User;
    List<Favorite> favorites  = Model.ToList();

}

<nav class="navbar navbar-expand-lg navbar-light fixed-top" id="mainNav">
    <div class="container">
        <a class="navbar-brand" asp-controller="Home" asp-action="Index">Home</a>
        <a class="navbar-brand" asp-controller="Post" asp-action="Index">Post</a>
        <a class="navbar-brand" asp-controller="Categories" asp-action="Index">
           Category
        </a>
        <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
        </button>
        <div class="collapse navbar-collapse" id="navbarResponsive">
            <ul class="navbar-nav ml-auto">
                 <li class="nav-item">
                    <a class="nav-link text-danger d-flex" style="font-size: 24px;"  asp-controller="Favorites" asp-action="Index"><i class='fas fa-bookmark'></i></a> 
                </li>
                  <li class="nav-item">
                     @if(userId != null)
                        {
                                <span class="nav-link text-white">[@userAccount.Favorites.Count()]</span>
                        }
                </li>
               
                 @if (userId != null)
                        {
                            <li class="nav-item" style="margin-right: 10px">
                                <a href="#" class="btn btn-light text-dark">Hello, @Context.Session.GetString("FullName")</a>
                            </li>
                            <li  class="nav-item">
                                <a href="@Url.Action("Logout","Home")" class="btn btn-info" style="color:white;  margin-right: 10px">Logout</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item" style="margin-right: 10px;">
                                <a class="nav-link btn btn-success text-white" asp-area="" asp-controller="Home" asp-action="Login">Login</a>
                            </li>
                            <li class="nav-item ">
                                <a class="nav-link btn btn-primary text-white" asp-area="" asp-controller="Home" asp-action="Register">Register</a>
                            </li>
                        }
            </ul>
        </div>
    </div>
</nav>