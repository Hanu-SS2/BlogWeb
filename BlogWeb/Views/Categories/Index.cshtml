@model IEnumerable<BlogWeb.Models.Category>
@{
     Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container">
     <form asp-controller="Categories" asp-action="Index" class="d-none d-md-inline-block form-inline ml-auto mr-0 mr-md-3 my-2 my-md-0">
        <div class="input-group mb-3">
             <input name="name" type="text" value="@ViewBag.Name" class="form-control" placeholder="Search categories for..." />
            <div class="input-group-append">
                <button class="btn btn-outline-secondary" style="padding: 0 10px 0 10px">Search</button>
            </div>
        </div>
    </form>
      <div class="row align-content-center">
            @foreach (var cate in Model){
            <div class="col-lg-4 col-md-3 mb-4">
                <div class="card border-0 shadow">
                    <div class="card-body">
                        <div class="row text-center" style="margin: 0px auto 10px 0px;">
                            <h5 class="card-title text-center w-100"><a asp-controller="Categories" asp-action="Detail" asp-route-id="@cate.CatId">@cate.CatName</a></h5>
                             <div class="card-body w-100">@cate.Description</div>
                        </div>
                    </div>
                </div>
            </div>  
            }
      </div>   
</div>
