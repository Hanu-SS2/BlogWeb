<div class="slim-pageheader">
    <ol class="breadcrumb slim-breadcrumb">
        <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Home" asp-action="Index">Home</a></li>
        <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Categories" asp-action="Index">Category Management</a></li>
         <li class="breadcrumb-item active" aria-current="page">Details Category</li>
    </ol>
    <h6 class="slim-pagetitle">Category Management</h6>

</div>
<div class="section-wrapper mg-t-20">
    <div class="form-layout form-layout-7">
        <div class="row no-gutter">
            <div class="col-5 col-sm-4">
                ID:
            </div>
            <div class="col-7 col-sm-8">
                <input asp-for="Id" class="form-control"  />
            </div>
        </div>
        <div class="row no-gutter">
            <div class="col-5 col-sm-4">
                Title:
            </div>
            <div class="col-7 col-sm-8">
                <input asp-for="Title" class="form-control"  />
            </div>
        </div>
        <div class="row no-gutter">
            <div class="col-5 col-sm-4">
                Name:
            </div>
            <div class="col-7 col-sm-8">
                <input asp-for="Name" class="form-control"  />
            </div>
        </div>
        <div class="row no-gutter">
            <div class="col-5 col-sm-4">
                Parent:
            </div>
            <div class="col-7 col-sm-8">
                @ViewBag.NameParent
            </div>
        </div>
        <div class="row no-gutter">
            <div class="col-5 col-sm-4">
                Level:
            </div>
            <div class="col-7 col-sm-8">
                <input asp-for="Level" class="form-control"  />
            </div>
        </div>
        <div class="row no-gutter">
            <div class="col-5 col-sm-4">
                Publised:
            </div>
            <div class="col-7 col-sm-8">
                @if(Model.Published == true)
                {
                    <span class="badge badge-primary">public</span>
                    
                }else{
                    <span class="badge badge-primary">NON-public</span>
                }
            </div>
        </div>
         <div class="row no-gutter">
            <div class="col-5 col-sm-4">
                Root:
            </div>
            <div class="col-7 col-sm-8">
                @if(Model.IsRoot == true)
                {
                    <span class="badge badge-primary">Yes</span>
                    
                }else{
                    <span class="badge badge-primary">No</span>
                }
            </div>
        </div>
    </div>
    @if( ViewBag.ChildList != null &&  ViewBag.ChildList.Count > 0)
    {
        <h4>Child category list</h4>
        <div class="table-responsive">
        <table class="table mg-b-0">
            <thead>
                <tr>
                    <th>
                        ID
                    </th>
                    <th>
                        Name
                    </th>
                    <th>
                        Title
                    </th>
                    <th>
                        Description
                    </th>
                    <th>
                        Level
                    </th>
                    <th>
                        Action
                    </th>
                </tr>
            </thead>
            <tbody>
                    @foreach(var item in ViewBag.ChildList)
                        {
                            <tr>
                                <td>@item.Id</td>
                                <td>@item.Name</td>
                                <td>@item.Title</td>
                                <td>@item.Description</td>
                                <td>@item.Level</td>
                                <td>
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-success">Edit</a>
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary">Details</a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                                </td>
                                    
                            </tr>
                        }
            </tbody>
        </table>
    </div>
    }
    <div style="text-align: center !important" class="form-layout-footer mg-t-30">
        <a asp-area="Admin" asp-controller="Categories"  asp-route-id="@Model.Id" asp-action="Edit" class="btn btn-primary bd-0">Edit</a>
        <a asp-area="Admin" asp-controller="Categories" asp-action="Index" class="btn btn-success bd-0">Back to List</a>
    </div>
</div>