@model BlogWeb.Areas.Admin.Models.Post

@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="slim-pageheader">
    <ol class="breadcrumb slim-breadcrumb">
        <!-- Roles Controller --> 
        <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Home" asp-action="Index">Home</a></li>
        <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Posts" asp-action="Index">List Post</a></li>
        <li class="breadcrumb-item active" aria-current="page">Create Post</li>
    </ol>
    <h6 class="slim-pagetitle">Create Posts</h6>
</div><!-- slim-pageheader -->

<hr />
<div class="section-wrapper">
    <div class="form-layout">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row mg-b-25">
                <div class="col-lg-12">
                    <div class="form-group">
                        <label class="form-control-label" asp-for="Title"></label>
                        <input type="text" class="form-control" asp-for="Title"  />
                        <span class="text-danger"></span>
                    </div>
                </div>
                <div class="col-lg-12">
                    <div class="form-group">
                        <label class="form-control-label" asp-for="Description"></label>
                        <input type="text" maxlength="254" class="form-control" asp-for="Description" />
                        <span class="text-danger"></span>
                    </div>
                </div>
                @*<div class="col-lg-12">
                    <div class="form-group mg-b-10-force" >
                        <label class="form-control-label" asp-for="Thumb"></label>
                        <input name="UploadThumb" type="file" class="form-control-file" id="UploadThumb"  accept="image/*"/>
                        <span class="text-danger"></span>
                    </div>
                </div>*@
                <div class="col-lg-12">
                    <div class="form-group" >
                        <label class="form-control-label" asp-for="Thumb"></label>
                        <input type="text" class="form-control" asp-for="Thumb" />
                        <span class="text-danger"></span>
                    </div>
                </div>
                <div class="col-lg-12">
                    <div class="form-group">
                        <label class="form-control-label" asp-for="Contents"></label>
                        <input type="text" class="form-control" asp-for="Contents" />
                        <span class="text-danger"></span>
                    </div>
                </div>
                <div class="col-lg-12">
                    <div class="form-group">
                        <label asp-for="CreateDate" class="control-label"></label>
                        <input asp-for="CreateDate" class="form-control" value="@ViewBag.CurrentTime" />
                        <span class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

