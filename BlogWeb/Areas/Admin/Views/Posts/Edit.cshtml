@model BlogWeb.Areas.Admin.Models.Post

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="slim-pageheader">
    <ol class="breadcrumb slim-breadcrumb">
        <!-- Roles Controller --> 
        <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Home" asp-action="Index">Home</a></li>
        <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Posts" asp-action="Index">List Post</a></li>
        <li class="breadcrumb-item active" aria-current="page">Edit Post</li>
    </ol>
    <h6 class="slim-pagetitle">Edit Posts</h6>
</div><!-- slim-pageheader -->

<hr />
<div class="section-wrapper">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="PostId" />
            <div class="row mg-b-25"> 
                 <div class="col-lg-12">
                     <div class="form-group">
                        <label asp-for="Title" class="control-label"></label>
                        <input asp-for="Title" class="form-control" />
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>
                 </div>
                 <div class="col-lg-12">
                     <div class="form-group">
                        <label asp-for="Description" class="control-label"></label>
                        <input asp-for="Description" class="form-control" />
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                 </div>
                 <div class="col-lg-12">
                     <div class="form-group">
                        <label asp-for="Contents" class="control-label"></label>
                        <input asp-for="Contents" class="form-control" />
                        <span asp-validation-for="Contents" class="text-danger"></span>
                    </div>
                 </div>
                 <div class="col-lg-12">
                     <div class="form-group">
                        <label asp-for="Thumb" class="control-label"></label>
                        <input asp-for="Thumb" class="form-control" />
                        <span asp-validation-for="Thumb" class="text-danger"></span>
                    </div>
                 </div>
                 <div class="col-lg-12">
                     <h4>Previous picture</h4>
                     <img src="@Model.Thumb" width="500" height="600"/>
                 </div>

                 <div class="col-lg-12">
                     <div class="form-group">
                        <label asp-for="CreateDate" class="control-label"></label>
                        <input asp-for="CreateDate" class="form-control" />
                        <span asp-validation-for="CreateDate" class="text-danger"></span>
                    </div>
                 </div>     
            </div>
            
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

