@model BlogWeb.Models.Role

@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="slim-pageheader">
    <ol class="breadcrumb slim-breadcrumb">
        <!-- Roles Controller --> 
        <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Home" asp-action="Index">Home</a></li>
        <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Roles" asp-action="Index">Role Management</a></li>
        <li class="breadcrumb-item active" aria-current="page" asp-area="Admin" asp-controller="Roles" asp-action="Create" >Create</li>
    </ol>
    <h6 class="slim-pagetitle">Form Layout</h6>
</div><!-- slim-pageheader -->
<div class="section-wrapper">
   <form asp-area="Admin" asp-controller="Roles" asp-action="Create" method="post">
        <div class="form-layout">
            <div class="row mg-b-25">
                <div class="col-lg-6">
                    <div class="form-group">
                        <label class="form-group-label">Role Name: <span class="tx-danger">*</span></label>
                        <input class="form-control" type="text" asp-for="RoleName" placeholder="Enter RoleName"/>
                    </div>
                </div> 
                <div class="col-lg-6">
                    <div class="form-group">
                        <label class="form-group-label">Description: <span class="tx-danger">*</span></label>
                        <input class="form-control" type="text" asp-for="RoleDescription" placeholder="Enter Role Description"/>
                    </div>
                </div>
                
            </div>
            <div class="form-layout-footer">
                <button class="btn btn-primary bd-0">Submit form</button>
                <button class="btn btn-secondary bd-0">Cancel</button>
            </div>
        </div>
    </form>
</div>

