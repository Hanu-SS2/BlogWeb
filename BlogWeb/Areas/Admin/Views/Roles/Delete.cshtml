@model BlogWeb.Models.Role

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="slim-pageheader">
    <ol class="breadcrumb slim-breadcrumb">
        <!-- Roles Controller --> 
        <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Home" asp-action="Index">Home</a></li>
        <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Roles" asp-action="Index">Role Management</a></li>
        <li class="breadcrumb-item active" aria-current="page" asp-area="Admin" asp-controller="Roles" asp-action="Delete" >Delete Role</li>
    </ol>
    <h6 class="slim-pagetitle">Delete Role</h6>
</div><!-- slim-pageheader -->
<div class="section-wrapper mg-t-20">
    <div class="form-layout form-layout-7">
         <div class="row no-gutters">
             <div class="col-5 col-sm-4">
                 ID:
             </div>
             <div class="col-7 col-sm-8">
                <input asp-for="RoleId" class="form-control" type="text" />
            </div>
        </div>
        
        <div class="row no-gutters">
             <div class="col-5 col-sm-4">
                 Role Name:
             </div>
             <div class="col-7 col-sm-8">
                <input asp-for="RoleName" class="form-control" type="text" />
            </div>
        </div> 
        <div class="row no-gutters">
             <div class="col-5 col-sm-4">
                 Role Description:
             </div>
             <div class="col-7 col-sm-8">
                <input asp-for="RoleDescription" class="form-control" type="text" />
            </div>
        </div>
    </div>
    <div style="text-align:center !important" class="form-layout-fooetr mg-t-30">
        <form asp-area="Admin" asp-action="Delete" asp-route-id="@Model.RoleId">
            <input type="hidden" asp-for="RoleId" />
            <input type="hidden" asp-for="RoleName" />
            <input type="hidden" asp-for="RoleDescription" />
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            <a asp-area="Admin" asp-controller="Roles" asp-action="Index" class="btn btn-success bd-0">Back to List</a>

        </form>
    </div>
   



</div>


